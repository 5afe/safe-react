[ignore]
.*/migrations/**
.*/scripts/**

[untyped]
.*/config/**

[declarations]
.*/node_modules/**
.*/flow-typed/**

[include]
<PROJECT_ROOT>/src/**

[libs]
<PROJECT_ROOT>/flow-typed

[lints]

[options]
module.file_ext=.js
module.file_ext=.json
module.file_ext=.jsx
module.file_ext=.css
module.file_ext=.scss

module.name_mapper='^~' ->'<PROJECT_ROOT>/src'
module.name_mapper='^#' ->'<PROJECT_ROOT>/safe-contracts/build/contracts'
module.name_mapper='.*\(.s?css\)' -> '{}'

[strict]
